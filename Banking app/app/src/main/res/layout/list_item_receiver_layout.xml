<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="18dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="18dp"
    card_view:cardElevation="12dp"
    card_view:cardUseCompatPadding="false"
    card_view:contentPadding="6dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/fffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:padding="1dp"
            android:text="NAME        : "
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt_Reciever_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fffff"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:padding="1dp"
            android:text="Reciever_Name"
            android:textColor="#1B1B1B"
            tools:ignore="ObsoleteLayoutParam" />

        <TextView
            android:id="@+id/emmmmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fffff"
            android:fontFamily="@font/montserrat"
            android:padding="1dp"
            android:text="EMAIL ID   : "
            android:textStyle="bold"
            tools:ignore="HardcodedText">

        </TextView>

        <TextView
            android:id="@+id/receiver_email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fffff"
            android:layout_toRightOf="@id/emmmmm"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:inputType="textEmailAddress"
            android:padding="1dp"
            android:text="Email_id"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/rwwwww"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emmmmm"
            android:fontFamily="@font/montserrat"
            android:padding="1dp"
            android:text="BALANCE  : "
            android:textStyle="bold"
            tools:ignore="HardcodedText">

        </TextView>

        <TextView
            android:id="@+id/receiver_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receiver_email_id"
            android:layout_toRightOf="@+id/rwwwww"
            android:fontFamily="@font/montserrat"
            android:inputType="number"
            android:padding="1dp"
            android:text="Balance"
            android:textColor="#2196F3"
            android:typeface="monospace"
            tools:ignore="TextViewEdits" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>